---
import '../styles/global.css';

const { title = 'My Personal Website', description = 'Minimal Astro site', navLatestYear = null } = Astro.props;
const blogHref = navLatestYear ? `/blog/${navLatestYear}` : '/blog/2025';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<a href="/" style="font-weight: 700;">Home</a>
			<a href="/about">About</a>
			<a href={blogHref}>Blog</a>
		</header>
		<main class="site-main">
			<slot />
		</main>
	</body>
</html>