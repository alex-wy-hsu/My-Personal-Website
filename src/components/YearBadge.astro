---
import { toChineseUpperYear, getYearAccentVar } from '../utils/dateHelpers';

interface Props {
  year: number;
}

const { year } = Astro.props;
const chineseYear = toChineseUpperYear(year);
const accentColor = getYearAccentVar(year);
---

<div class="year-badge">
  <div class="year-badge-text" style={{ color: accentColor }}>
    {chineseYear}
  </div>
  <div class="year-badge-number">{year}</div>
</div>

<style>
  .year-badge {
    display: inline-block;
    text-align: center;
    margin: 1rem 0;
  }

  .year-badge-text {
    font-size: 1.5rem;
    font-family: "京華老宋體", "KingHwa_OldSong", "PMingLiU", "Songti TC", serif;
    line-height: 1.2;
    margin-bottom: 0.25rem;
    transition: opacity 0.2s;
  }

  .year-badge-number {
    font-size: 0.85rem;
    color: var(--muted);
  }
</style>